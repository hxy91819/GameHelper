<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="GameHelper.WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <controls:XamlControlsResources />
            </ResourceDictionary.MergedDictionaries>

            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="GH.SurfaceBrush" Color="#F5F6F8" />
                    <SolidColorBrush x:Key="GH.CardBrush" Color="#FFFFFF" />
                    <SolidColorBrush x:Key="GH.BorderBrush" Color="#E3E6EA" />
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="GH.SurfaceBrush" Color="#1C1D1F" />
                    <SolidColorBrush x:Key="GH.CardBrush" Color="#26282B" />
                    <SolidColorBrush x:Key="GH.BorderBrush" Color="#3A3D42" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
