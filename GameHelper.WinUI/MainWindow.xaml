<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="GameHelper.WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:GameHelper.Core.Models"
    xmlns:viewModels="using:GameHelper.WinUI.ViewModels"
    mc:Ignorable="d"
    Title="GameHelper">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Spacing="12" Margin="16,16,16,8">
            <TextBlock Text="GameHelper (WinUI)" FontSize="24" FontWeight="SemiBold" />
            <Button
                Content="{x:Bind ViewModel.Shell.MonitorButtonText, Mode=OneWay}"
                Command="{x:Bind ViewModel.Shell.ToggleMonitorCommand}"
                AutomationProperties.AutomationId="Shell_ToggleMonitorButton" />
        </StackPanel>

        <TabView Grid.Row="1" Margin="16,0,16,16" AutomationProperties.AutomationId="Shell_TabView">
            <TabViewItem Header="Settings">
                <StackPanel Padding="12" Spacing="8">
                    <ComboBox
                        Header="Process Monitor"
                        ItemsSource="{x:Bind ViewModel.Settings.AvailableMonitorTypes, Mode=OneWay}"
                        SelectedItem="{x:Bind ViewModel.Settings.SelectedMonitorType, Mode=TwoWay}"
                        AutomationProperties.AutomationId="Settings_MonitorTypeComboBox" />
                    <ToggleSwitch
                        Header="Auto-start monitor in interactive mode"
                        IsOn="{x:Bind ViewModel.Settings.AutoStartInteractiveMonitor, Mode=TwoWay}"
                        AutomationProperties.AutomationId="Settings_AutoStartToggle" />
                    <ToggleSwitch
                        Header="Launch on system startup"
                        IsOn="{x:Bind ViewModel.Settings.LaunchOnSystemStartup, Mode=TwoWay}"
                        AutomationProperties.AutomationId="Settings_LaunchOnStartupToggle" />
                    <Button
                        Content="Save Settings"
                        Command="{x:Bind ViewModel.Settings.SaveCommand}"
                        AutomationProperties.AutomationId="Settings_SaveButton" />
                </StackPanel>
            </TabViewItem>

            <TabViewItem Header="Games">
                <Grid Padding="12" RowSpacing="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <ListView
                        ItemsSource="{x:Bind ViewModel.Games.Games, Mode=OneWay}"
                        SelectedItem="{x:Bind ViewModel.Games.SelectedGame, Mode=TwoWay}"
                        AutomationProperties.AutomationId="Games_ListView">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:GameEntry">
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <TextBlock Text="{x:Bind DisplayName}" />
                                    <TextBlock Text="{x:Bind ExecutableName}" Opacity="0.7" />
                                    <TextBlock Text="{x:Bind IsEnabled}" Opacity="0.7" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="8">
                        <Button Content="Refresh" Command="{x:Bind ViewModel.Games.RefreshCommand}" AutomationProperties.AutomationId="Games_RefreshButton" />
                        <Button Content="Add" Command="{x:Bind ViewModel.Games.AddCommand}" AutomationProperties.AutomationId="Games_AddButton" />
                        <Button Content="Update" Command="{x:Bind ViewModel.Games.UpdateCommand}" AutomationProperties.AutomationId="Games_UpdateButton" />
                        <Button Content="Delete" Command="{x:Bind ViewModel.Games.DeleteCommand}" AutomationProperties.AutomationId="Games_DeleteButton" />
                    </StackPanel>
                </Grid>
            </TabViewItem>

            <TabViewItem Header="Stats">
                <Grid Padding="12" RowSpacing="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Button
                        Content="Refresh Stats"
                        Command="{x:Bind ViewModel.Stats.RefreshCommand}"
                        AutomationProperties.AutomationId="Stats_RefreshButton" />

                    <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.Stats.Stats, Mode=OneWay}" AutomationProperties.AutomationId="Stats_ListView">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:GameStatsSummary">
                                <StackPanel Spacing="2">
                                    <TextBlock Text="{x:Bind DisplayName}" />
                                    <TextBlock Text="{x:Bind GameName}" Opacity="0.7" />
                                    <TextBlock Text="{x:Bind TotalMinutes}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </TabViewItem>
        </TabView>
    </Grid>
</Window>
