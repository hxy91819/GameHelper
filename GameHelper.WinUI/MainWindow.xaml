<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="GameHelper.WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:GameHelper.Core.Models"
    xmlns:viewModels="using:GameHelper.WinUI.ViewModels"
    mc:Ignorable="d"
    Title="GameHelper">
    <Grid Background="{ThemeResource GH.SurfaceBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Margin="16,16,16,8" Padding="16" CornerRadius="12" Background="{ThemeResource GH.CardBrush}" BorderBrush="{ThemeResource GH.BorderBrush}" BorderThickness="1">
            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                <StackPanel Spacing="4">
                    <TextBlock Text="GameHelper" FontSize="28" FontWeight="SemiBold" />
                    <TextBlock Text="WinUI 控制台助手 · 进程监控 / 配置 / 统计" Opacity="0.7" />
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                    <Border Padding="10,6" CornerRadius="999" Background="{ThemeResource GH.SurfaceBrush}" BorderBrush="{ThemeResource GH.BorderBrush}" BorderThickness="1">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <SymbolIcon Symbol="Play" />
                            <TextBlock Text="{x:Bind ViewModel.Shell.MonitorStatusText, Mode=OneWay}" />
                        </StackPanel>
                    </Border>
                    <Button
                        Content="{x:Bind ViewModel.Shell.MonitorButtonText, Mode=OneWay}"
                        Command="{x:Bind ViewModel.Shell.ToggleMonitorCommand}"
                        AutomationProperties.AutomationId="Shell_ToggleMonitorButton" />
                </StackPanel>
            </Grid>
        </Border>

        <TabView Grid.Row="1" Margin="16,0,16,16" AutomationProperties.AutomationId="Shell_TabView">
            <TabViewItem Header="Monitor">
                <Grid Padding="12" RowSpacing="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button
                            Content="{x:Bind ViewModel.Shell.MonitorButtonText, Mode=OneWay}"
                            Command="{x:Bind ViewModel.Shell.ToggleMonitorCommand}" />
                        <Button
                            Content="Clear Logs"
                            Command="{x:Bind ViewModel.Shell.ClearLogsCommand}" />
                        <TextBlock
                            Text="日志包含监控与系统信息"
                            VerticalAlignment="Center"
                            Opacity="0.7"
                            Margin="8,0,0,0" />
                    </StackPanel>

                    <Border Grid.Row="1" CornerRadius="10" Background="{ThemeResource GH.CardBrush}" BorderBrush="{ThemeResource GH.BorderBrush}" BorderThickness="1" Padding="8">
                        <Grid RowDefinitions="Auto,*">
                            <Grid ColumnDefinitions="110,110,260,*" ColumnSpacing="12" Margin="4,4,4,8">
                                <TextBlock Text="Time" FontWeight="SemiBold" Opacity="0.7" />
                                <TextBlock Grid.Column="1" Text="Level" FontWeight="SemiBold" Opacity="0.7" />
                                <TextBlock Grid.Column="2" Text="Category" FontWeight="SemiBold" Opacity="0.7" />
                                <TextBlock Grid.Column="3" Text="Message" FontWeight="SemiBold" Opacity="0.7" />
                            </Grid>
                            <ListView Grid.Row="1"
                                      ItemsSource="{x:Bind ViewModel.Shell.MonitorLogs, Mode=OneWay}"
                                      HorizontalContentAlignment="Stretch"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Padding" Value="0" />
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="viewModels:MonitorLogEntry">
                                        <Grid ColumnDefinitions="110,110,260,*" ColumnSpacing="12" Padding="4,6">
                                            <TextBlock Text="{x:Bind TimestampText, Mode=OneWay}"
                                                       Opacity="0.7"
                                                       TextTrimming="CharacterEllipsis" />
                                            <TextBlock Grid.Column="1"
                                                       Text="{x:Bind LevelText}"
                                                       Opacity="0.7"
                                                       TextTrimming="CharacterEllipsis" />
                                            <TextBlock Grid.Column="2"
                                                       Text="{x:Bind Category}"
                                                       Opacity="0.7"
                                                       TextWrapping="NoWrap"
                                                       TextTrimming="CharacterEllipsis" />
                                            <TextBlock Grid.Column="3"
                                                       Text="{x:Bind Message}"
                                                       TextWrapping="WrapWholeWords"
                                                       MaxLines="3"
                                                       TextTrimming="CharacterEllipsis" />
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Border>
                </Grid>
            </TabViewItem>

            <TabViewItem Header="Settings">
                <StackPanel Padding="12" Spacing="8">
                    <ComboBox
                        Header="Process Monitor"
                        ItemsSource="{x:Bind ViewModel.Settings.AvailableMonitorTypes, Mode=OneWay}"
                        SelectedItem="{x:Bind ViewModel.Settings.SelectedMonitorType, Mode=TwoWay}"
                        AutomationProperties.AutomationId="Settings_MonitorTypeComboBox" />
                    <ToggleSwitch
                        Header="Auto-start monitor in interactive mode"
                        IsOn="{x:Bind ViewModel.Settings.AutoStartInteractiveMonitor, Mode=TwoWay}"
                        AutomationProperties.AutomationId="Settings_AutoStartToggle" />
                    <ToggleSwitch
                        Header="Launch on system startup"
                        IsOn="{x:Bind ViewModel.Settings.LaunchOnSystemStartup, Mode=TwoWay}"
                        AutomationProperties.AutomationId="Settings_LaunchOnStartupToggle" />
                    <Button
                        Content="Save Settings"
                        Command="{x:Bind ViewModel.Settings.SaveCommand}"
                        AutomationProperties.AutomationId="Settings_SaveButton" />
                </StackPanel>
            </TabViewItem>

            <TabViewItem Header="Games">
                <Grid Padding="12" RowSpacing="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Border CornerRadius="10" Background="{ThemeResource GH.CardBrush}" BorderBrush="{ThemeResource GH.BorderBrush}" BorderThickness="1" Padding="8">
                        <Grid RowDefinitions="Auto,*">
                            <Grid ColumnDefinitions="2*,2*,1*" Margin="4,4,4,8">
                                <TextBlock Text="Display Name" FontWeight="SemiBold" Opacity="0.7" />
                                <TextBlock Grid.Column="1" Text="Executable" FontWeight="SemiBold" Opacity="0.7" />
                                <TextBlock Grid.Column="2" Text="Enabled" FontWeight="SemiBold" Opacity="0.7" />
                            </Grid>
                            <ListView
                                Grid.Row="1"
                                ItemsSource="{x:Bind ViewModel.Games.Games, Mode=OneWay}"
                                SelectedItem="{x:Bind ViewModel.Games.SelectedGame, Mode=TwoWay}"
                                AutomationProperties.AutomationId="Games_ListView">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="models:GameEntry">
                                        <Grid ColumnDefinitions="2*,2*,1*" Padding="4,6">
                                            <TextBlock Text="{x:Bind DisplayName}" FontWeight="SemiBold" />
                                            <TextBlock Grid.Column="1" Text="{x:Bind ExecutableName}" Opacity="0.7" />
                                            <TextBlock Grid.Column="2" Text="{x:Bind IsEnabled}" Opacity="0.7" />
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Border>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="8">
                        <Button Content="Refresh" Command="{x:Bind ViewModel.Games.RefreshCommand}" AutomationProperties.AutomationId="Games_RefreshButton" />
                        <Button Content="Add" Command="{x:Bind ViewModel.Games.AddCommand}" AutomationProperties.AutomationId="Games_AddButton" />
                        <Button Content="Update" Command="{x:Bind ViewModel.Games.UpdateCommand}" AutomationProperties.AutomationId="Games_UpdateButton" />
                        <Button Content="Delete" Command="{x:Bind ViewModel.Games.DeleteCommand}" AutomationProperties.AutomationId="Games_DeleteButton" />
                    </StackPanel>
                </Grid>
            </TabViewItem>

            <TabViewItem Header="Stats">
                <Grid Padding="12" RowSpacing="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Button
                        Content="Refresh Stats"
                        Command="{x:Bind ViewModel.Stats.RefreshCommand}"
                        AutomationProperties.AutomationId="Stats_RefreshButton" />

                    <Border Grid.Row="1" CornerRadius="10" Background="{ThemeResource GH.CardBrush}" BorderBrush="{ThemeResource GH.BorderBrush}" BorderThickness="1" Padding="8">
                        <ListView ItemsSource="{x:Bind ViewModel.Stats.Stats, Mode=OneWay}" AutomationProperties.AutomationId="Stats_ListView">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="models:GameStatsSummary">
                                    <StackPanel Spacing="2" Padding="4,6">
                                        <TextBlock Text="{x:Bind DisplayName}" FontWeight="SemiBold" />
                                        <TextBlock Text="{x:Bind GameName}" Opacity="0.7" />
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <TextBlock Text="{x:Bind TotalMinutes}" />
                                            <TextBlock Text="min" Opacity="0.7" />
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Border>
                </Grid>
            </TabViewItem>
        </TabView>
    </Grid>
</Window>
